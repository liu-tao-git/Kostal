<fvr>
    <primitive>
        <pt_desc> User can use this primitive to trigger software fault (CAT2) and print out customized error message. </pt_desc>
        <!-- ==================================================================
         ui parameter configuration (optional)
         check more detailed setting in CommonParams.xml
         ====================================================================-->
        <ui_par_config>
            <block_edit_color> #e02020 </block_edit_color>
            <block_execute_color> #ab666666 </block_execute_color>
            <menu_option>Edit Duplicate Delete</menu_option>
            <icon>:blockpalette/images/block/icon_fault.svg</icon>
        </ui_par_config>
        <!-- =============================================================== -->
        <input_par_config>
            <par_name> errorMessage </par_name>
            <par_desc> "user-defined error message" </par_desc>
            <par_type> MSG </par_type>
            <par_unit> none </par_unit>
            <par_default> triggered user specified fault </par_default>
            <par_required> 0 </par_required>
        </input_par_config>
    </primitive>
</fvr>
