<?xml version="1.0"?>
<!-- ==========================================================================
 primitive type options :
 "INIT", "MOVE", "READY", "CONTACT", "SLIDE", "SLIDE_ADAPTIVE", "SLIDE_SPIRAL",
 "SLIDE_SINEWAVE", "MAGNET", "PEGINHOLE"

robot type options : Flexiv, UR5, Bullet, Klampt
 ===========================================================================-->
<fvr>
    <primitive>
        <pt_desc>This primitive is used to show a ball balance demo.</pt_desc>
        <!-- ==================================================================
         ui parameter configuration (optional)
         check more detailed setting in CommonParams.xml
         ====================================================================-->
        <ui_par_config>
            <icon>:blockpalette/images/block/icon_ballBalance.svg</icon>
        </ui_par_config>
        <!-- ===================================================================
         input parameter configuration
         ====================================================================-->
        <input_par_config>
            <par_name> ballWeight </par_name>
            <par_desc> "weight of the ball, small iron ball:0.19, large iron ball: 0.3; green ball: 0.15; galaxy ball: 0.6 " </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> kg </par_unit>
            <par_required> 1 </par_required>
            <par_min> 0.1 </par_min>
            <par_max> 2.5 </par_max>
        </input_par_config>
        <input_par_config>
            <par_name> ballFrictionCoeff </par_name>
            <par_desc> "ball rolling friction coefficient,small iron ball: 1.471; large iron ball:1.424, green ball: 1.312; galaxy ball: 1.201" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
            <par_min> 0.01 </par_min>
            <par_max> 2.5 </par_max>
        </input_par_config>
        <input_par_config>
            <par_name> trajType</par_name>
            <par_desc> "ball trajectory type" </par_desc>
            <par_type> TYPE </par_type>
            <par_unit> none </par_unit>
            <par_required> 0 </par_required>
            <par_default> CIRCLE </par_default>
            <par_option> POINT LINE CIRCLE INFSHAPE</par_option>
        </input_par_config>
        <input_par_config>
            <par_name> COPOffsetX</par_name>
            <par_desc> "offset of the COP in x direction" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> m </par_unit>
            <par_required> 1 </par_required>
            <par_min> -0.1 </par_min>
            <par_max> 0.1 </par_max>
        </input_par_config>
        <input_par_config>
            <par_name> COPOffsetY</par_name>
            <par_desc> "offset of the COP in y direction" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> m </par_unit>
            <par_required> 1 </par_required>
            <par_min> -0.1 </par_min>
            <par_max> 0.1 </par_max>
        </input_par_config>
        <input_par_config>
            <par_name> pathScale </par_name>
            <par_desc> "scale of ball path" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> none </par_unit>
            <par_max> 3 </par_max>
            <par_min> 1 </par_min>
            <par_default> 1 </par_default>
            <par_required> 0 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> freScale </par_name>
            <par_desc> "scale of ball path frequency" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> none </par_unit>
            <par_max> 1 </par_max>
            <par_min> 0.3 </par_min>
            <par_default> 1 </par_default>
            <par_required> 0 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> enableDebug</par_name>
            <par_desc> "flag to enable debug mode, which would log ball reference and actual trajectory" </par_desc>
            <par_type> BOOL</par_type>
            <par_unit> none </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0 </par_default>
        </input_par_config>
        <!-- ===================================================================
         state parameter configuration
         ====================================================================-->
        <!-- ==================================================================
         default transition condition  
          condition_type : trigger condition type    
          lhs_param_name : LHS parameter name. It must be one of the state parameters in primitive  
          lhs_param_category : LHS parameter category. This should be PT_STATE for now 
          rhs_param_name (optional): RHS parameter name. no need to fill this field if rhs is a constant.
          rhs_param_category : RHS parameter category 
          rhs_param_data (optional) : RHS parameter data. 
         ====================================================================-->
        <default_transition_condition>
            <condition_type> GREATER </condition_type>
            <lhs_param_name>timePeriod</lhs_param_name>
            <lhs_param_category>PT_STATE</lhs_param_category>
            <rhs_param_category>CONST</rhs_param_category>
            <rhs_param_data>3000</rhs_param_data>
        </default_transition_condition>
    </primitive>
</fvr>
