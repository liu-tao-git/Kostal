<?xml version="1.0"?>
<!-- ==========================================================================
 primitive type options :
 "INIT", "MOVE", "READY", "CONTACT", "SLIDE", "SLIDE_ADAPTIVE", "SLIDE_SPIRAL",
 "SLIDE_SINEWAVE", "MAGNET", "PEGINHOLE"

robot type options : Flexiv, UR5, Bullet, Klampt
 ===========================================================================-->
<fvr>
    <primitive>
        <pt_desc> The primitive plans a 2d path for mobile platform navigation. </pt_desc>
        <!-- ===================================================================
         input parameter configuration
         ====================================================================-->
        <input_par_config>
            <par_name> maxLinearVelocity </par_name>
            <par_desc> "maximum velocity for mobile platform" </par_desc>
            <par_type> DOUBLE</par_type>
            <par_required> 0 </par_required>
            <par_unit> m/s </par_unit>
            <par_default> 0.3 </par_default>
            <par_max> 2.0 </par_max>
            <par_min> 0.0 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> maxRotVelocity </par_name>
            <par_desc> "maximum rotation velocity for mobile platform" </par_desc>
            <par_type> DOUBLE</par_type>
            <par_required> 0 </par_required>
            <par_unit> deg/s </par_unit>
            <par_default> 1 </par_default>
            <par_max> 5.0 </par_max>
            <par_min> 0.0 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> duration </par_name>
            <par_desc> "time duration for the trajectory" </par_desc>
            <par_type> DOUBLE</par_type>
            <par_required> 0 </par_required>
            <par_unit> s </par_unit>
            <par_default> 5 </par_default>
            <par_min> 0.0 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> planningDuration </par_name>
            <par_desc> "time duration for the trajectory" </par_desc>
            <par_type> DOUBLE</par_type>
            <par_required> 0 </par_required>
            <par_unit> s </par_unit>
            <par_default> 5 </par_default>
            <par_min> 0.0 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> durationStep </par_name>
            <par_desc> "maximum rotation velocity for mobile platform" </par_desc>
            <par_type> DOUBLE</par_type>
            <par_required> 0 </par_required>
            <par_unit> s </par_unit>
            <par_default> 0.3 </par_default>
            <par_max> 2.0 </par_max>
            <par_min> 0.0 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> targetPoses </par_name>
            <par_desc> potential target poses </par_desc>
            <par_type> ARRAY_VEC_3d </par_type>
            <par_unit> m-deg </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <!-- ===================================================================
         state parameter configuration
         ====================================================================-->
        <state_par_config>
            <par_name> reachedTarget </par_name>
            <par_desc> "flag to indicate if the robot has reached target" </par_desc>
            <par_type> BOOL</par_type>
            <par_unit> none </par_unit>
        </state_par_config>
        <state_par_config>
            <par_name> feasible </par_name>
            <par_desc> "flag to indicate if the path is feasible" </par_desc>
            <par_type> BOOL</par_type>
            <par_unit> none </par_unit>
        </state_par_config>
        <!-- ===================================================================
                output parameter configuration
         ====================================================================-->
        <!-- ==================================================================
         default transition condition  
          condition_type : trigger condition type    
          lhs_param_name : LHS parameter name. It must be one of the state parameters in primitive  
          lhs_param_category : LHS parameter category. This should be PT_STATE for now 
          rhs_param_name (optional): RHS parameter name. no need to fill this field if rhs is a constant.
          rhs_param_category : RHS parameter category 
          rhs_param_data (optional) : RHS parameter data. 
         ====================================================================-->
        <default_transition_condition>
            <condition_type> EQUAL</condition_type>
            <lhs_param_name>reachedTarget</lhs_param_name>
            <lhs_param_category>PT_STATE</lhs_param_category>
            <rhs_param_category>CONST</rhs_param_category>
            <rhs_param_data>1</rhs_param_data>
        </default_transition_condition>
    </primitive>
</fvr>
