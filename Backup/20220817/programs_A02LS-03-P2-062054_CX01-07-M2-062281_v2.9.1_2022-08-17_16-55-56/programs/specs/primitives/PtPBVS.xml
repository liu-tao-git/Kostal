<?xml version="1.0"?>
<fvr>
    <primitive>
        <pt_desc>This primitive does an Position Based Visual Servo (PBVS). The goal is to
        align an object 6D pose with a target 6D pose defined in the camera frame
        with the motion of the robot. User can specify the target object pose,
        visual servo gains in input parameters. </pt_desc>
        <!-- ==================================================================
         ui parameter configuration (optional)
         check more detailed setting in CommonParams.xml
         ====================================================================-->
        <ui_par_config>
            <icon>:blockpalette/images/block/icon_Visual_Control.svg</icon>
        </ui_par_config>
        <!-- ===================================================================
         input parameter configuration

         par_type : "CART_POS", "QUAT", "POSE", "BOOL", "DOUBLE", "INT", "STRING"
         ====================================================================-->
        <input_par_config>
            <par_name> maxVel </par_name>
            <par_desc> "maximum Cartesian linear velocity" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> m/s </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0.1 </par_default>
            <par_max> 2.0 </par_max>
            <par_min> 0.0 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> maxRotVel </par_name>
            <par_desc> "maximum Cartesian angular velocity" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> deg/s </par_unit>
            <par_required> 0 </par_required>
            <par_default>60.0 </par_default>
        </input_par_config>
        <input_par_config>
            <par_name> KpPBVS_pos </par_name>
            <par_desc> "p gain for the PBVS camera delta pos velocity" </par_desc>
            <par_type> VEC_3d </par_type>
            <par_unit> none </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0.003 0.003 0.003 </par_default>
        </input_par_config>
        <input_par_config>
            <par_name> KpPBVS_rot </par_name>
            <par_desc> "p gain for the PBVS camera delta velocity for rotation" </par_desc>
            <par_type> VEC_3d </par_type>
            <par_unit> none </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0.003 0.003 0.003 </par_default>
        </input_par_config>
        <input_par_config>
            <par_name> posErrorPBVS </par_name>
            <par_desc> "threshold for PBVS reached target condition in meter " </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> m </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0.002 </par_default>
        </input_par_config>
        <input_par_config>
            <par_name> oriErrorPBVS </par_name>
            <par_desc> "threshold for PBVS reached target condition by quat distance" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> none </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0.05 </par_default>
        </input_par_config>
        <input_par_config>
            <par_name> objName </par_name>
            <par_desc> "object's name" </par_desc>
            <par_type> OBJNAME </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> camId </par_name>
            <par_desc> "camera id" </par_desc>
            <par_type> TYPE </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
            <par_option> CAMID_0 CAMID_1 CAMID_2 CAMID_3 CAMID_4 CAMID_5 CAMID_6 CAMID_7 </par_option>
        </input_par_config>
        <input_par_config>
            <par_name> camObjPose </par_name>
            <par_desc> "Camera pose based on object coordinate " </par_desc>
            <par_type> COORD </par_type>
            <par_unit> m-deg </par_unit>
            <par_required> 1 </par_required>
            <par_option>OBJ</par_option>
            <par_freedrive> 1 </par_freedrive>
        </input_par_config>
        <!-- ===================================================================
         state parameter configuration
         ====================================================================-->
        <state_par_config>
            <par_name> reachedTarget </par_name>
            <par_desc> "flag to indicate if the camera has reached target" </par_desc>
            <par_type> BOOL</par_type>
            <par_unit> none </par_unit>
        </state_par_config>
        <state_par_config>
            <par_name> zeroImgError </par_name>
            <par_desc> "flag to indicate that the image pixel error is small enough" </par_desc>
            <par_type> BOOL</par_type>
            <par_unit> none </par_unit>
        </state_par_config>
        <!-- ===================================================================
                output parameter configuration
         ====================================================================-->
        <!-- ==================================================================
         default transition condition
          condition_type : trigger condition type
          lhs_param_name : LHS parameter name. It must be one of the state parameters in primitive
          lhs_param_category : LHS parameter category. This should be PT_STATE for now
          rhs_param_name (optional): RHS parameter name. no need to fill this field if rhs is a constant.
          rhs_param_category : RHS parameter category
          rhs_param_data (optional) : RHS parameter data.
         ====================================================================-->
        <default_transition_condition>
            <condition_type> EQUAL</condition_type>
            <lhs_param_name>reachedTarget</lhs_param_name>
            <lhs_param_category>PT_STATE</lhs_param_category>
            <rhs_param_category>CONST</rhs_param_category>
            <rhs_param_data>1</rhs_param_data>
        </default_transition_condition>
    </primitive>
</fvr>
