<?xml version="1.0"?>
<!-- ==========================================================================
 primitive type options :
 "INIT", "MOVE", "READY", "CONTACT", "SLIDE", "SLIDE_ADAPTIVE", "SLIDE_SPIRAL",
 "SLIDE_SINEWAVE", "MAGNET", "PEGINHOLE"

robot type options : Flexiv, UR5, Bullet, Klampt
 ===========================================================================-->
<fvr>
    <primitive>
        <!-- ===================================================================
         input parameter configuration

         par_type : "CART_POS", "QUAT", "POSE", "BOOL", "DOUBLE", "INT", "STRING"
         par_input_type : "KEYIN", "TEACH", "PT"
         ====================================================================-->
        <input_par_config>
            <par_name> testDOFs </par_name>
            <par_desc> "DOFs to run sine test" </par_desc>
            <par_type> ARRAY_INT </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> sineAmp </par_name>
            <par_desc> "sine amplitude" </par_desc>
            <par_type> ARRAY_DOUBLE </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> sineFreq </par_name>
            <par_desc> "sine frequency" </par_desc>
            <par_type> ARRAY_DOUBLE </par_type>
            <par_unit> Hz </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> sinePhase </par_name>
            <par_desc> "sine phase" </par_desc>
            <par_type> ARRAY_DOUBLE </par_type>
            <par_unit> deg </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> testingPeriod </par_name>
            <par_desc> "testing period" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> s </par_unit>
            <par_required> 0 </par_required>
            <par_default> 3600.0 </par_default>
        </input_par_config>
        <input_par_config>
            <par_name> analyzeTrackingResult </par_name>
            <par_desc> "Flag to enable/disable analysis of tracking control" </par_desc>
            <par_type> BOOL </par_type>
            <par_unit> none </par_unit>
            <par_required> 0 </par_required>
            <par_default> 1 </par_default>
        </input_par_config>
        <input_par_config>
            <par_name> transitionType </par_name>
            <par_desc> "Transition type for generating smooth path to connect multi dof sine to start and end position" </par_desc>
            <par_type> TYPE </par_type>
            <par_unit> none </par_unit>
            <par_required> 0 </par_required>
            <par_default> POLY </par_default>
            <par_option> CHIRP POLY </par_option>
        </input_par_config>
        <!-- ===================================================================
         state parameter configuration
         ====================================================================-->
    </primitive>
</fvr>
