<?xml version="1.0"?>
<fvr>
    <primitive>
        <!-- ===================================================================
         input parameter configuration

         par_type : "CART_POS", "QUAT", "POSE", "BOOL", "DOUBLE", "INT", "STRING"
         par_input_type : "KEYIN", "TEACH" , "PT"
         ====================================================================-->
        <input_par_config>
            <par_name> forceAxis </par_name>
            <par_desc> "Define axis in work frame for force or position control" </par_desc>
            <par_type> VEC_6i </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> copAxis </par_name>
            <par_desc> "Define axis in work frame for cop or other control" </par_desc>
            <par_type> VEC_6i </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> velDirInWorkFrame </par_name>
            <par_desc> "The direction of tcp velocity in the work frame" </par_desc>
            <par_type> VEC_3d </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> goalWrench </par_name>
            <par_desc> "Target wrench in the work frame" </par_desc>
            <par_type> VEC_6d </par_type>
            <par_unit> N </par_unit>
            <par_required> 1 </par_required>
            <par_default> 0 0 0 0 0 0</par_default>
        </input_par_config>
        <input_par_config>
            <par_name> goalCop </par_name>
            <par_desc> "Target center of pressure in the work frame" </par_desc>
            <par_type> VEC_3d </par_type>
            <par_unit> m </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0 0 0</par_default>
            <par_max> 0.20 0.20 0.20</par_max>
            <par_min> -0.20 -0.20 -0.20</par_min>
        </input_par_config>
        <input_par_config>
            <par_name> trapezoidHeight </par_name>
            <par_desc> "trapezoid signal height" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> m/s </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0 </par_default>
            <par_max> 1.5 </par_max>
            <par_min> -1.5 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> trapezoidSlope </par_name>
            <par_desc> "trapezoid slope" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> m/s^2 </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0 </par_default>
            <par_max> 4 </par_max>
            <par_min> -4 </par_min>
        </input_par_config>
        <input_par_config>
            <par_name> trapezoidPeriod </par_name>
            <par_desc> "trapezoid time peroid" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> s </par_unit>
            <par_required> 0 </par_required>
            <par_default> 0 </par_default>
        </input_par_config>
        <!-- ===================================================================
         state parameter configuration                                     
         ====================================================================-->
        <state_par_config>
            <par_name> inContact </par_name>
            <par_desc> "flag to indicate if the robot is in contact or not" </par_desc>
            <par_type> BOOL</par_type>
            <par_unit> none </par_unit>
        </state_par_config>
    </primitive>
</fvr>
