<?xml version="1.0"?>
<fvr>
    <primitive>
        <!-- ===================================================================
        input parameter configuration 
         
         par_type : "CART_POS", "QUAT", "POSE", "BOOL", "DOUBLE", "INT", "STRING"
         par_input_type : "KEYIN", "TEACH"                                          
         ====================================================================-->
        <input_par_config>
            <par_name> objName </par_name>
            <par_desc> "object's name" </par_desc>
            <par_type> OBJNAME </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> objDetectionType </par_name>
            <par_desc> "object detection type. If the detection type is 3DPOS, the object's orientation is set as the world coordinate" </par_desc>
            <par_type> TYPE </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
            <par_option> 3DPOS 6DPOSE </par_option>
        </input_par_config>
        <input_par_config>
            <par_name> camId </par_name>
            <par_desc> "camera id" </par_desc>
            <par_type> INT </par_type>
            <par_unit> none </par_unit>
            <par_required> 1 </par_required>
        </input_par_config>
        <input_par_config>
            <par_name> timeOutPeriod </par_name>
            <par_desc> "detection time out" </par_desc>
            <par_type> DOUBLE </par_type>
            <par_unit> s </par_unit>
            <par_required> 0 </par_required>
            <par_default> 30.0 </par_default>
        </input_par_config>
        <!-- ===================================================================
         state parameter configuration                                       
         ====================================================================-->
        <!-- ===================================================================
                output parameter configuration
        ====================================================================-->
        <output_par_config>
            <par_name> foundObj </par_name>
            <par_desc> "true if the object is found" </par_desc>
            <par_type> BOOL</par_type>
            <par_unit> none </par_unit>
        </output_par_config>
    </primitive>
</fvr>
